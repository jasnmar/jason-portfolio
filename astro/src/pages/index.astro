---
import Layout from "../layouts/layout.astro"
import { Image } from 'astro:assets'
import jasoncity from "../assets/images/jason-city.webp"
---

<Layout>

  <section class="main">
    <div class="home--bio">
      <Image
        alt="A photo of Jason in a city setting"
        class="home--main-image"
        src={jasoncity}
      >
      </Image>
      <div class="home--bio-text">
        <h1>Hi, I'm jason martin</h1>
        <p class="home--headline">Technologist, Facilitator, Instructor</p>
      </div>
    </div>
  </section>
  <section class="home--work">
    <p class="home--summary">
      I'm a software technologist. I've worked in User Experinece Design,
      managed teams of Product Owners and User Experience Designers, worked as a
      Agile Coach and Scrum Master and of late have taken on learning Web
      development
    </p>
  </section>

</Layout>

<style>
  h1 {
    margin-top: 5rem;
    font-size: 5rem;
    text-align: left;
  }

  .home--bio {
    display: flex;
    flex-direction: row;
    padding: 40px;
    gap: 40px;
    width: 80vw;
    margin: auto;
  }

  .home--bio-text {
    display: flex;
    flex-direction: column;
    border-radius: var(--border-radius);
  }

  .home--main-image {
    width: 35vw;
    border-radius: var(--border-radius);
    object-fit: cover;
    box-shadow: 1px 1px 5px black;
    max-height: 500px;
  }

  .home--headline {
    margin-top: 2rem;
    text-align: right;
    font-size: 2rem;
    background-color: var(--color-dark);
    padding-right: 20px;
    border: 5px var(--color-dark) solid;
    border-radius: var(--border-radius);
    color: var(--color-light);
  }

  .home--work {
    background-color: var(--color-medium);
    display: flex;
    justify-content: center;
  }

  .home--work > p {
    color: var(--color-light);
  }

  .home--summary {
    font-size: 1.5rem;
    padding: 5rem;
    width: 80vw;
  }

  @media only screen and (max-width: 600px) {
    .home--bio {
      flex-wrap: wrap;
    }
    .home--main-image {
      width: 60vw;
    }
    .home--summary {
      padding: 1rem;
    }
  }
</style>
