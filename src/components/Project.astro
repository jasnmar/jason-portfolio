---
import ImageItem from "./ImageItem.astro"
import ImageModal from "./ImageModal.astro"
import { Image } from "astro:assets"

interface Props {
  name: string
  description: string
  images?: { image?: string; link?: string }[]
  source: string
  deploy: string
  goals?: string[]
}
const { name, description, images, source, deploy, goals } = Astro.props
const modalId = `modal-${name.toLowerCase().replace(/\s+/g, "-")}`

const imageImports = import.meta.glob<{
  default: import("astro").ImageMetadata
}>("/src/assets/images/projectImages/*.{jpeg,jpg,png,gif,webp}")

const resolvedImages = await Promise.all(
  images.map(async (img) => {
    const imagePath = `/src/${img.image}.webp`
    if (!imageImports[imagePath]) return { ...img, fullSrc: "" }
    const module = await imageImports[imagePath]()
    return { ...img, fullSrc: module.default.src }
  })
)
---

<section class="project--card">
  <ImageModal id={modalId} title={name}>
    <img id={`${modalId}-image`} src="" alt="" class="modal--image" />
  </ImageModal>

  <h2 class="project--title">{name}</h2>

  <div class="project--main">
    <div class="project--image-container">
      {
        resolvedImages.map((imageObj) => (
          <div data-modal-open={modalId} data-full-src={imageObj.fullSrc}>
            <ImageItem source={imageObj.image} text={`${name} screenshot`} />
          </div>
        ))
      }
    </div>
    <div class="project--details">
      <p class="project--description">{description}</p>
      <div class="project--links">
        {
          source ? (
            <a class="project--link" target="_blank" href={source}>
              Source Code
            </a>
          ) : null
        }
        {
          deploy ? (
            <a class="project--link" target="_blank" href={deploy}>
              Deployed Site
            </a>
          ) : (
            <p class="project--link">Not Deployed</p>
          )
        }
      </div>
      {goals ? <p class="project--list-header">Learning Goals</p> : ""}
      <ul class="project--list">
        {
          goals
            ? goals.map((goal) => <li class="project--item-card">{goal}</li>)
            : ""
        }
      </ul>
    </div>
  </div>
</section>

<style>
  /* .project--card {
  border: 1px red solid;
} */

  .project--main {
    display: grid;
    padding: 20px;
    column-gap: 1rem;
    justify-content: stretch;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    /* grid-auto-rows:auto */
  }

  .project--title {
    text-align: left;
    margin-left: 1.5rem;
  }

  .project--details {
    text-align: left;
  }

  .project--image {
    max-width: 100%;
  }

  .project--image-container {
    --grid-min-col-size: 200px;
    display: grid;
    max-width: 600px;
    border-radius: var(--border-radius);
    /*minmax uses the smaller of 150px or 100% --- or 1fr for the column size*/
    grid-template-columns: repeat( auto-fit, minmax(var(--grid-min-col-size), 1fr));
    gap: 1rem;
  }

  .project--description {
    margin-top: 0px;
    font-size: 1.2rem;
    flex: 5;
  }

  .project--links {
    display: flex;
    gap: 2rem;
  }

  .project--link {
    text-decoration: none;
    font-weight: 700;
    color: inherit;
    padding-top: 0.8em;
    display: inline-block;
    font-size: 1.3rem;
  }

  .project--list-header {
    margin-bottom: 0px;
    font-size: 1.3rem;
    margin-top: 0.5rem;
  }

  .project--item-card {
    margin: 0.2rem;
    border: 1px solid var(--color-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.4rem;
    border-radius: var(--border-radius);
    background-color: var(--color-pale);
  }

  .project--list {
    display: flex;
    flex-wrap: wrap;
    margin-top: 0px;
  }

  .project--image {
    border-radius: var(--border-radius);
  }

  .modal {
    width: 80%;
  }

  .modal--image {
    max-width: 80vw;
    max-height: 80vh;
  }

  /* @media (max-width: 1200px) {
    .project--image-container {
      max-width: 400px;
    }
  } */
  @media (max-width: 800px) {
    .project--main {
      flex-direction: column;
    }

    .project--details {
      padding-left: 0;
      margin-top: 1rem;
    }
  }
</style>

<script define:vars={{ modalId }}>
  document.addEventListener("DOMContentLoaded", () => {
    // Find all elements that can trigger this project's modal
    const triggers = document.querySelectorAll(`[data-modal-open="${modalId}"]`)
    const modalOverlay = document.getElementById(modalId)
    const modalImage = document.getElementById(`${modalId}-image`)
    console.log(modalId)

    if (!modalOverlay || !modalImage) {
      console.error("Modal components not found for", modalId)
      return
    }

    triggers.forEach((trigger) => {
      trigger.addEventListener("click", () => {
        const fullImageSrc = trigger.dataset.fullSrc
        if (fullImageSrc) {
          const imageElement = trigger.querySelector("img")
          if (imageElement) {
            modalImage.src = fullImageSrc // Use the full resolution src
            modalImage.alt = imageElement.alt

            // Show the modal
            modalOverlay.classList.add("active")
            document.body.style.overflow = "hidden"
          }
        }
      })
    })
  })
</script>