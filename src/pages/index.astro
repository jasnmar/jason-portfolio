---
import Layout from "../layouts/layout.astro"
import { Image } from "astro:assets"
import jasoncity from "../assets/images/jason-city.webp"
---

<Layout>
  <main>
    <section class="main">
      <Image
        alt="A photo of Jason in a city setting"
        class="home--main-image"
        src={jasoncity}
      />
      <div class="home--bio-text">
        <h1>Hi, I'm jason martin</h1>
        <p class="home--headline">Technologist, Facilitator, Instructor</p>
      </div>
    </section>
    <section class="home--work">
      <p class="home--summary">
        I'm a software technologist. I've worked in User Experinece Design,
        managed teams of Product Owners and User Experience Designers, worked as
        a Agile Coach and Scrum Master and of late have taken on learning Web
        development
      </p>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
  }

  h1 {
    margin-top: 5rem;
    font-size: 5rem;
    text-align: left;
  }

  .main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    padding: 40px;
    gap: 40px;
    width: 80vw;
    margin: auto;
    @media screen and (max-width: 800px) {
      grid-template-rows: 1fr 1fr;
      grid-template-columns:1fr;
    }
  }

  .home--bio-text {
    display: flex;
    flex-direction: column;
    border-radius: var(--border-radius);
    @media screen and (max-width: 800px) {
      order:1;
    }
  }

  .home--main-image {
    width: 35vw;
    border-radius: var(--border-radius);
    object-fit: cover;
    box-shadow: 1px 1px 5px black;
    max-height: 500px;
    @media screen and (max-width: 800px) {
      width:80%;
      order:2;
    }
  }

  .home--headline {
    margin-top: 2rem;
    text-align: right;
    font-size: 2rem;
    background-color: var(--color-dark);
    padding-right: 20px;
    border: 5px var(--color-dark) solid;
    border-radius: var(--border-radius);
    color: var(--color-light);
  }

  .home--work {
    background-color: var(--color-medium);
    display: flex;
    justify-content: center;
  }

  .home--summary {
    color: var(--color-light);
    font-size: 1.5rem;
    padding: 5rem;
    width: 80vw;
  }
  html[data-theme="dark"] .home--summary {
    color: var(--color-darkest);
  }

  @media only screen and (max-width: 600px) {
    .home--bio {
      flex-wrap: wrap;
    }
    .home--main-image {
      width: 60vw;
    }
    .home--summary {
      padding: 1rem;
    }
  }
</style>
